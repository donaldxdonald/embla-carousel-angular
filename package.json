{
  "name": "embla-carousel-angular-monorepo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build embla-carousel-angular",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "release": "pnpm run build && changeset publish",
    "release:pre:enter": "changeset pre enter next",
    "release:pre:exit": "changeset pre exit",
    "release:pre": "pnpm run build && changeset version && changeset publish --tag next",
    "changeset": "changeset",
    "prepare": "simple-git-hooks"
  },
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "dependencies": {
    "@angular/animations": "^21.0.1",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/platform-browser-dynamic": "^21.0.1",
    "@angular/router": "^21.0.1",
    "embla-carousel": "^9.0.0-rc01",
    "embla-carousel-angular": "workspace:*",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "~21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.29.4",
    "@dndxdnd/eslint-config": "^2.10.0",
    "@types/jasmine": "~4.0.0",
    "angular-eslint": "^21.0.1",
    "eslint": "^9.27.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^16.1.0",
    "ng-packagr": "~21.0.0",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "pnpm": {
    "overrides": {
      "eslint-plugin-import": "npm:eslint-plugin-import-x@^4"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  }
}
